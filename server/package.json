{
  "name": "telegram-crm-backend",
  "version": "1.0.0",
  "description": "Backend for Telegram Channel Subscription Management CRM",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "start:prod": "NODE_ENV=production node server.js",
    "seed:core": "node src/scripts/seedCore.js",
    "seed:mock": "node src/scripts/seed.js",
    "seed:enhanced": "node src/scripts/enhancedSeed.js",
    "seed:all": "npm run seed:core && npm run seed:mock",
    "seed:full": "npm run seed:core && npm run seed:enhanced",
    "test": "cross-env NODE_ENV=test mocha test/**/*.test.mjs --timeout 10000 --exit"
  },
  "keywords": [
    "telegram",
    "crm",
    "subscription",
    "razorpay",
    "node",
    "express",
    "mongodb"
  ],
  "author": "Your Name/Team",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.9.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.4",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "node-telegram-bot-api": "^0.64.0",
    "pdf-parse": "^1.1.1",
    "razorpay": "^2.9.2",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "chai": "^5.2.0",
    "cross-env": "^7.0.3",
    "csv-parser": "^3.2.0",
    "json2csv": "^6.0.0-alpha.2",
    "mocha": "^11.1.0",
    "mongodb-memory-server": "^10.1.4",
    "multer": "^1.4.5-lts.2",
    "nodemon": "^3.0.2",
    "pdfkit": "^0.17.0",
    "sinon": "^20.0.0",
    "slugify": "^1.6.6",
    "supertest": "^7.1.0"
  }
}
